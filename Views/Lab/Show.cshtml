@model string[]
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Лаб. 1 №1</title>
</head>
<body>
    @Html.Partial("_Menu")

    @using (Html.BeginForm("Sum", "Lab"))
    {
        <label>Задание: сумма четных элементов.</label><br />
        @Html.ActionLink("rand()", "Show", "Lab")<br />
        <textarea name="numstring" rows="7" cols="40">@Model[0]</textarea><br />
        <input type="submit" value="Посчитать" />
    }
    @{
        if (Model.Length > 1)
        {
            <p>Сумма четных чисел: @Model[1]</p>
        }
    }
</body>
</html>
